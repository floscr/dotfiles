#!/usr/bin/env sh

emacsclient=/etc/profiles/per-user/floscr/bin/emacsclient

export ORG_CLOCK_STRING=$($emacsclient --eval '(+org/org-clock-polybar-status)' 2>&1 )

case "$ORG_CLOCK_STRING" in
    *"Connection refused"*)
        exit 1;;
    *"can\'t find socket"*)
        exit 1;;
    "-1")
        exit 1;;
    *"server-start"*)
        exit 1;;
    *"-1"*)
        exit 1;;
    *)
        echo $ORG_CLOCK_STRING ;
esac
